generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model producer {
  id               Int           @id @default(autoincrement())
  active           Boolean       @default(true)
  name             String        @db.VarChar(200)
  document         String        @unique @db.VarChar(30)
  document_type_id Int
  created_at       DateTime      @default(now()) @db.Timestamptz(6)
  updated_at       DateTime      @default(now()) @db.Timestamptz(6)
  farm             farm[]
  document_type    document_type @relation(fields: [document_type_id], references: [id])
}

model document_type {
  id         Int        @id @default(autoincrement())
  user       producer[]
  created_at DateTime   @default(now()) @db.Timestamptz(6)
  updated_at DateTime   @default(now()) @db.Timestamptz(6)
}

model state_uf {
  id         Int      @id @default(autoincrement())
  uf         String   @db.VarChar(2)
  name       String   @db.VarChar(100)
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @db.Timestamptz(6)
  farm       farm[]
}

model farm {
  id              Int            @id @default(autoincrement())
  name            String         @db.VarChar(30)
  area            Int
  arable_area     Int
  vegetation_area Int
  producer_id     Int
  created_at      DateTime       @default(now()) @db.Timestamptz(6)
  updated_at      DateTime       @default(now()) @db.Timestamptz(6)
  producer        producer       @relation(fields: [producer_id], references: [id])
  culture         culture_farm[]
  state_uf        state_uf       @relation(fields: [state_uf_id], references: [id])
  state_uf_id     Int
  city            String         @db.VarChar(100)
}

model culture_farm {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @db.Timestamptz(6)
  farm       farm     @relation(fields: [farm_id], references: [id])
  farm_id    Int
  culture    culture  @relation(fields: [culture_id], references: [id])
  culture_id Int
}

model culture {
  id           Int            @id @default(autoincrement())
  description  String         @unique @db.VarChar(30)
  culture_farm culture_farm[]
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @db.Timestamptz(6)
}
